---
const {id} = Astro.props;
---
<dialog id={id} class="modal">
  <div class="modal-box w-11/12 max-w-5xl">
    <div id="search"></div>
  </div>
  <form method="dialog" class="modal-backdrop">
    <button>Close</button>
  </form>
</dialog>

<style is:global>
body {
  --pagefind-ui-primary: var(--fallback-p,oklch(var(--p)/var(--tw-bg-opacity))); /* bg-primary */
  --pagefind-ui-text: var(--fallback-bc,oklch(var(--bc)/var(--tw-text-opacity))); /* bg-base-content */
  --pagefind-ui-background: var(--fallback-b3,oklch(var(--b3)/var(--tw-bg-opacity))); /* bg-base-300 */
  --pagefind-ui-border: var(--fallback-bc,oklch(var(--bc)/0.1)); /* divider */
  --pagefind-ui-tag: #ff0000;
}

.pagefind-ui mark {
  background-color: var(--fallback-a,oklch(var(--a)/var(--tw-bg-opacity))); /* bg-accent */
}
</style>

<script>
  import { PagefindUI } from "@pagefind/default-ui";

  new PagefindUI({
    element: "#search",
    showImages: false,
    showSubResults: true,
  });
</script>
