---
import { getDeprecatorPackages, type VPMPackage, type VPMRepository } from '~/utils/vpm'
import Card from './Card.astro';

interface Props {
  pkg: VPMPackage
}

const { pkg } = Astro.props;
const allRepos: VPMRepository[] = await Astro.glob("~/../vpm/repos/*.json");
const deprecators = getDeprecatorPackages(pkg, allRepos);

---
<Card>
  <div class="card-body flex-row">
    <div class="flex-grow flex-col">
      <div class="card-title flex flex-row gap-2">
        <h2><a class="link link-primary" href=`/packages/${pkg.name}`>{pkg.displayName}</h2>
        {
          deprecators.length > 0
            ? <div class="tooltip" data-tip="Deprecated package">
                <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6 text-warning" fill="none" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" /></svg>
              </div>
            : null
        }
      </div>
      <p>{pkg.description}</p>
    </div>
  </div>
</Card>
